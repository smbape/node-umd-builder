
# freact function causes React and ReactDOM variables to be automatically available
# it also enables interpretation of jsx code
# since this is a coffee file, jsx code must be wrapped in '`' to be considered as a javascript code
freact = ->
    span = document.createElement('span')
    span.innerHTML = '<div id="example-react-in-coffee"></div>'
    for child in span.children
        document.body.appendChild(child)
    span = null

    ReactDOM.render `<h1>Hello, world! CoffeeScript</h1>`, document.getElementById('example-react-in-coffee')
    
    console.log('react-in-coffee')